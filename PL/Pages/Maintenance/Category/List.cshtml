@page
@model PL.Pages.Maintenance.Category.ListModel
@{
    Layout = "_Maintenance";
    ViewData["PageTitle"] = "All Categories";
}

<div class="container cp-b px-4 py-5 my-5">
    <div class="row">
        <div class="col"><h3>Category</h3></div>
        <div class="col"><h3>Created At</h3></div>
        <div class="col"><h3>Updated At</h3></div>
        <div class="col"><h3>To Do</h3></div>
    </div>
    <hr />

    @if (Model.Categories.Count != 0)
    {
        @await Component.InvokeAsync("CategoryTreePrinter", Model.Categories)
    }
    else
    {
        <div class="row my-1">
            <div class="col ta-center">
                <p>Category list is empty. Use button below to add first.</p>
            </div>
        </div>
    }

    <div class="row">
        <div class="col ta-center">
            <a class="button cp-b-bg my-2" href="/maintenance/category">Create New</a>
        </div>
    </div>
</div>